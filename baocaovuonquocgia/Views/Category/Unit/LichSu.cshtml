@using baocaovuonquocgia.Models
@using baocaovuonquocgia.App_Data
@model baocaovuonquocgia.Models.ControllerTab
@{
        tongcuclamnghiepEntities tongcuclamnghiep = new tongcuclamnghiepEntities();
        var _DonVi = tongcuclamnghiep.m_unit.Where(a => a.id == Model.IdChinhSua).FirstOrDefault();

        if (_DonVi != null)
        {
            var DanhSachLichSu = tongcuclamnghiep.m_unitversion.Where(a => a.unit_id == _DonVi.id).OrderBy(a => a.status).ToList();



        <ul class="nav nav-tabs nav-tabs-colored">
            <li><a onclick="ChuyenTab('ChuyenTabDanhSach')">Danh sách</a></li>
            <li><a onclick="ChuyenTab('ChuyenTabThemMoi')">Thêm mới</a></li>
            <li class="active"><a>Lịch sử</a></li>
        </ul>
        <div class="tab-content tab-content-colored">
            <div class="tab-pane fade in active">
                <div class="section-heading">
                    <h1 class="page-title">@_DonVi.unitname</h1>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <table class="table table-bordered table-hover data-tables dataTable no-footer">
                            <thead>
                                <tr>
                                    <th>
                                        STT
                                    </th>
                                    <th>
                                        Ngày tạo
                                    </th>
                                    <th>
                                        Xử lý
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    for (int i = 0; i < DanhSachLichSu.Count(); i++)
                                    {
                                        var Item = DanhSachLichSu.ElementAt(i);
                                        @Html.Raw(string.Format("<tr><td class='text-center'>{0}</td><td>{1:dd-MM-yyyy}</td><td class='text-center'><a class='hint--top x-chinhsua' style='cursor: pointer;' aria-label='Chi tiết' onclick='ViewLog(this)'><div class='data-text' style='display:none'>{2}</div><i class='lnr lnr-pencil'></i></a></td></tr>", (i + 1), Item.createdate, Item.datatext));
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-8">
                        <div class="view-log-unit" style="overflow:scroll">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

