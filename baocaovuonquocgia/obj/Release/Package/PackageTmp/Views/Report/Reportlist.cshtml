@model baocaovuonquocgia.Models.ControllerTab
@{
    ViewBag.Title = "Reportlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="section-heading">
        <h1 class="page-title">Danh sách báo cáo</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (Model.Tab == 1)
